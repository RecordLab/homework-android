<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.account.ProfileAccountPasswordActivity">

    <View
        android:id="@+id/view_lock_setting_toggle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" ></View>

    <TextView
        android:id="@+id/tv_lock_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="현재 비밀번호"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_lock_setting_toggle"
        app:layout_constraintStart_toStartOf="@+id/view_lock_setting_toggle"
        app:layout_constraintTop_toTopOf="@+id/view_lock_setting_toggle" />

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/editTextTextPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/view_lock_setting_toggle"
        app:layout_constraintEnd_toEndOf="@+id/view_lock_setting_toggle"
        app:layout_constraintStart_toEndOf="@+id/textView132"
        app:layout_constraintTop_toTopOf="@+id/view_lock_setting_toggle" />

    <View
        android:id="@+id/bg46"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_lock_setting_toggle" ></View>

    <TextView
        android:id="@+id/textView131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="새 비밀번호"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg46"
        app:layout_constraintStart_toStartOf="@+id/bg46"
        app:layout_constraintTop_toTopOf="@+id/bg46" />

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/editTextTextPassword1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/bg46"
        app:layout_constraintEnd_toEndOf="@+id/bg46"
        app:layout_constraintStart_toEndOf="@+id/textView132"
        app:layout_constraintTop_toTopOf="@+id/bg46" />

    <View
        android:id="@+id/bg47"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg46" ></View>

    <TextView
        android:id="@+id/textView132"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:text="새 비밀번호 확인"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg47"
        app:layout_constraintStart_toStartOf="@+id/bg47"
        app:layout_constraintTop_toTopOf="@+id/bg47" />

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/editTextTextPassword2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/bg47"
        app:layout_constraintEnd_toEndOf="@+id/bg47"
        app:layout_constraintStart_toEndOf="@+id/textView132"
        app:layout_constraintTop_toTopOf="@+id/bg47" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view_lock_setting_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_black_24" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:text="비밀번호 변경"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view_lock_setting_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:text="완료"
        android:textColor="@color/disableGray"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view_lock_setting_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bg47"
        app:layout_constraintStart_toStartOf="@id/bg47"
        android:layout_marginTop="8dp"
        android:text="@string/signup_val3"
        android:textColor="@color/redPigment"
        android:textSize="12sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>